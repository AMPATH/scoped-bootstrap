{
  "name": "scoped-bootstrap",
  "version": "1.0.0",
  "scripts": {
    "build": "rimraf dist && postcss node_modules/bootstrap/dist/css/bootstrap.min.css --config postcss.config.js --output dist/css/bootstrap.min.css && npm run copy-bootstrap-fonts && npm run copy-bootstrap-js",
    "copy-bootstrap-fonts": "copyfiles -f node_modules/bootstrap/dist/fonts/* dist/fonts/",
    "copy-bootstrap-js": "copyfiles -f node_modules/bootstrap/dist/js/* dist/js/"
  },
  "author": "",
  "license": "ISC",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "autoprefixer": "^9.7.3",
    "bootstrap": "^3.4.1",
    "copyfiles": "^2.1.1",
    "postcss-cli": "^6.1.3",
    "postcss-prefix-selector": "^1.7.2",
    "rimraf": "^3.0.0"
  }
}
